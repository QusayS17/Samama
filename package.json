{
  "name": "samama",
  "private": true,
  "version": "0.0.101",
  "author": "APIX Design",
  "description": "gitix â€” An interactive kiosk application designed for seamless customer feedback and engagement. (Resolution: 2048x768)",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently -k \"vite --port 5173\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development ELECTRON_START_URL=http://localhost:5173 electron electron/main.cjs\"",
    "start": "npm run dev",
    "build:app": "vite build",
    "build": "vite build",
    "pack": "npm run build:app && electron-builder --win nsis",
    "preview": "vite preview",
    "lint": "eslint .",
    "electron": "electron electron/main.cjs"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.11.0",
    "@tailwindcss/vite": "^4.1.13",
    "axios": "^1.12.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.555.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.9.1",
    "tailwindcss": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "37.2.6",
    "electron-builder": "^26.0.12",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "vite": "^7.1.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.apixdesign.gitixe",
    "productName": "samama",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/logooooo.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "src/assets/logooooo.ico",
      "uninstallerIcon": "src/assets/logooooo.ico",
      "deleteAppDataOnUninstall": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "QusayS17",
        "repo": "Samama"
      }
    ]
  }
}
